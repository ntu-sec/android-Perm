<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?attr/actionBarSize"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="dumpDeviceInfo"
        android:text="@string/deviceInfo" />

    <Button
        android:id="@+id/userDict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="dumpUserDict"
        android:text="@string/useDict" />

    <Button
        android:id="@+id/btn_simple_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="intentSimpleProvider"
        android:text="@string/simpleProvider" />

    <Button
        android:id="@+id/btn_start_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="intentStorageUser"
        android:layout_gravity="center_horizontal"
        android:text="@string/storageUser" />

    <Button
        android:id="@+id/btn_runtime_perm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="runtimePermTest"
        android:layout_gravity="center_horizontal"
        android:text="@string/runtime_perm" />

</LinearLayout>
